<h2 class="mt-3">New book</h2>
<%= form_with model: book do |f| %>
  <div class="form-group">
    <p class="new">Title</p>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <p class="new">Opinion</p>
    <%= f.text_area :body %><br>
  </div>
  <div class="form-group">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>