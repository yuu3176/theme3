<%= flash[:notice] %>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/user', user: @books.user %>
      <%= render 'new', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path do %>
                <%= image_tag @books.user.get_profile_image(100,100) %>
                <%= @books.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@books.id) do %>
                <%= @books.title %>
              <% end %>
            </td>
            <td>
              <%= @books.body %>
            </td>
            <td>
              <% if @books.user == current_user %>
                <%= link_to "Edit", edit_book_path %>
              <% end %>
            </td>
            <td>
              <% if @books.user == current_user %>
                <%= link_to "Destroy", book_path(@books), method: :delete %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

